import accessly as av
import matplotlib.pyplot as plt
import numpy as np


def test_default():
	av.configure(
		legiblefont={
			'weight' : 'bold'

		}
    )

	x = np.arange(0,10,1)
	fig, ax = plt.subplots(figsize=(5,5))
	ax.plot(x, x)
	ax.set_xlabel('X values')
	ax.set_ylabel('Y values')
	plt.show(block=False)

	xlabel = ax.xaxis.get_label()
	assert xlabel.get_fontname() == 'Atkinson Hyperlegible'
	# assert xlabel.get_fontweight() == 'bold'


def test_tnr():
	av.configure(
		legiblefont={
			'font' : 'Times New Roman',
			'weight' : 'normal'
		}
	)

	x = np.arange(0,10,1)
	_, ax = plt.subplots(figsize=(5,5))
	ax.plot(x, x)
	ax.set_xlabel('X values')
	ax.set_ylabel('Y values')
	plt.show(block=False)

	ylabel = ax.yaxis.get_label()
	assert ylabel.get_fontname() == 'Times New Roman'
	# assert ylabel.get_fontweight() == 'normal'


if __name__ == '__main__':
	test_default()
	test_tnr()